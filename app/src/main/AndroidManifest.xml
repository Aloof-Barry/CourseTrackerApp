<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourseTrackerApp"
        tools:targetApi="31">
        <activity
            android:name=".activity.AssessDetailAct"
            android:exported="false"
            android:label="Assessment Details"/>
        <activity
            android:name=".activity.CourseDetailAct"
            android:exported="false"
            android:label="Course Details"/>
        <activity
            android:name=".activity.TermDetailAct"
            android:exported="false"
            android:parentActivityName=".activity.AllTermsAct"
            android:label="Term Details"/>
        <activity
            android:name=".activity.AllAssessAct"
            android:exported="false"
            android:label="Assessments"/>
        <activity
            android:name=".activity.AllCoursesAct"
            android:exported="false"
            android:label="Courses"/>
        <activity
            android:name=".activity.AllTermsAct"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity"
            android:label="Terms"/>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:label="Home Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>